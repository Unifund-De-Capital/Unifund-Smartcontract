contract UnifundSmartContract is Ownable {
    using SafeMath for uint256;
    mapping(address => bool) whitelist;
    IERC20 usdf;
    constructor(address _usdf) public {
        // stage = Stage.Unpause;
        usdf = IERC20(_usdf);
        whitelist[owner()]=true;
    }


    function addWhiteList(address user) external onlyOwner returns (bool) {
        whitelist[user] = true;
        return whitelist[user];
    }

    function checkWhiteList(address user) external onlyOwner returns (bool) {
        return whitelist[user];
    }

    function deleteWhiteList(address user) external onlyOwner returns (bool){
        whitelist[user] = false;
        return whitelist[user];
    }

    modifier onlyWhiteList(address user) {
        require(whitelist[user] == true, "Not in whitelist");
        _;
    }

    function getOwner() external view returns (address) {
        return owner();
    }

    event Deposit(
        address user,
        string token,
        string blockchain,
        string txid,
        uint256 amount,
        uint256 usdf,
        uint256 rate,
        uint256 time
    );

    function deposit(
        address user,
        string token,
        string blockchain,
        string txid,
        uint256 amount,
        uint256 rate,
        uint256 time
    ) external onlyWhiteList(msg.sender) {
        uint256 addUsdf = amount.mul(rate);
        usdf.issue(user, addUsdf);
        emit Deposit(user, token, blockchain, txid, amount, addUsdf, rate, time);
    }

    event Withdraw(
        address user,
        string token,
        string blockchain,
        string txid,
        uint256 amountUsdf,
        uint256 amountCoin,
        uint256 rate,
        uint256 time
    );

    function withdraw(
        address user,
        string token,
        string blockchain,
        string txid,
        uint256 amountUsdf,
        uint256 rate,
        uint256 time
    ) external onlyWhiteList(msg.sender) {
        uint256 amountCoin = amountUsdf.div(rate);
        usdf.burn(user, amountUsdf);
        emit Withdraw(user, token, blockchain, txid, amountUsdf, amountCoin, rate, time);
    }
}
